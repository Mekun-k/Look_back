<div class="container pt-3">
   <div class="row">
     <div class="col-12">
       <div class="row">
        <div class="text-center">
          <h3>ユーザ名: <%= current_user.name %></h3>
        </div>
            <%= bootstrap_form_with model: @user, local: true do |f| %>
              <%= render 'devise/shared/error_messages', object: f.object %>

              <div class= form-group >
                <div class="m-3">
                  <%= f.text_field :qiita_user_id,  placeholder: "Qiitaユーザー名" %>
                </div>
              </div>

              <div class="text-center">
                <div class="m-3">
                  <%= f.submit nil, class: 'btn btn-primary' %>
                </div>
              </div>

              <div class="text-center">
                <div class="m-3">
                  <%= link_to '戻る', :back, class: 'btn btn-primary' %>
                </div>
              </div>
          <% end %>
       </div>
     </div>
   </div>
 </div>

