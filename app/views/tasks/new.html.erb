<h1>新規タスク作成ページ</h1>

<%= form_with model: @task, local: true do |f| %>
    <div class= form-group >
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', id: 'task_name' %>
    </div>
    <div class= form-group >
        <%= f.label :body %>
        <%= f.text_field :body, class: 'form-control', id: 'task_name' %>
    </div>
    <div class= form-group >
        <%= f.label :task_url %>
        <%= f.text_field :task_url, class: 'form-control', id: 'task_name' %>
    </div>
    <div class= form-group >
        <%= f.label :task_state %>
        <%= f.number_field :task_state, class: 'form-control', id: 'task_name' %>
    </div>
    <div class= form-group >
        <%= f.label :start_date %>
        <%= f.date_field :start_date, class: 'form-control', id: 'task_name' %>
    </div>
    <div class= form-group >
        <%= f.label :doing_date %>
        <%= f.date_field :doing_date, class: 'form-control', id: 'task_name' %>
    </div>
    <%= f.submit nil, class: 'btn btn-primary' %>
<% end %>
