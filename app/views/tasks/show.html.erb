<% content_for(:title, @task.name) %>
<div class="container pt-5">
  <div class="row mb-3">
    <div class="col-lg-8 offset-lg-2">
      <h1><%= t('.title') %></h1>
      <!-- 掲示板内容 -->
      <article class="card">
        <div class="card-body">
          <div class='row'>
            <div class='col-md-3'>
            </div>
            <div class='col-md-9'>
              <h3 class="d-inline"><%= @task.name %></h3>
              <%= render 'crud_menus', task: @task %>
              <ul class="list-inline">
                <li class="list-inline-item">by <%= @task.user.decorate.full_name %></li>
                <li class="list-inline-item"><%= l @task.created_at, format: :long  %></li>
              </ul>
            </div>
          </div>
          <p><%= simple_format(@task.body) %></p>
        </div>
      </article>
    </div>
  </div>

  <!-- コメントフォーム -->
  <%= render 'comments/form', { task: @task, comment: @comment } %>

  <!-- コメントエリア -->
  <%= render 'comments/comments', { comments: @comments } %>
</div>