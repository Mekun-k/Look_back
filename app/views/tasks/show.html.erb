<%= javascript_pack_tag "qiita_show.js" %>

 <div class="container">
   <div class="row">
     <div class="col-lg">
      <div class="form-control">
       <h1 class="text-center"><%= t('.title') %></h1>
        <table class="table">
          <tbody>
            <tr>
              <div class="my-3">
                <th scope="row"><%= Task.human_attribute_name("name") %></th>
                <td><%= @form.name %></td>
              </div>
            </tr>

            <tr>
              <th scope="row"><%= Task.human_attribute_name("body") %></th>
              <td><%= @form.body %></td>
            </tr>

            <tr>
              <th scope="row">記事</th>
              <td id="article_url"></td>
              <input type="hidden" id="qiita_show" value="<%= @qiita_id %>" >
              <input type="hidden" id="choice_show" value="<%= @choice %>" >
            </tr>

            <tr>
              <th scope="row"><%= Task.human_attribute_name("task_state") %></th>
              <td><%= @form.task_state %></td>
            </tr>

            <tr>
              <th scope="row"><%= Task.human_attribute_name("created_at") %></th>
              <td><%= @form.created_at.strftime('%Y/%m/%d') %></td>
            </tr>

            <tr>
              <th scope="row"><%= Task.human_attribute_name("doing_date") %></th>
              <td><%= @form.doing_date.strftime('%Y/%m/%d') %></td>
            </tr>

            <%# ここから下は未実装 %>
            <tr>
              <th scope="row">周期</th>
              <td></td>
            </tr>

            <tr>
              <th scope="row">繰り返し</th>
              <td></td>
            </tr>
            <%# ここから上は未実装 %>

          </tbody>
        </table>
        <div class="text-center">
          <%= render 'crud_menus', { form: @form } if current_user.own?(@form)%>
        </div>
      </div>
      <div class="text-center">
        <div class="m-3">
          <%= link_to '戻る', :back, class: 'btn btn-primary' %>
        </div>
      </div>
     </div>
   </div>
 </div>

