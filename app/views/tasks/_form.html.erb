<%= bootstrap_form_with model: task, local: true do |f| %>
    <%= render 'devise/shared/error_messages', object: f.object %>

    <div class= form-group >
        <div class="m-3">
             <div id = "select-perent">
                <%= f.select :'select-perent', {'Qiitaユーザー記事': 1, 'Qiitaストック記事': 2},
                { include_blank: '選択してください'} %>
            </div>
        </div>
    </div>

    <div class= form-group >
        <div class="m-3">
            <div id = "select-children">
                <%= f.select :qiita_id, {'': 1}%>
            </div>
        </div>
    </div>

    <div class= form-group >
        <div class="m-3">
            <%= f.text_field :name %>
        </div>
    </div>

    <div class= form-group >
        <div class="m-3">
            <%= f.text_field :body %>
        </div>
    </div>

    <div class= form-group >
        <div class="m-3">
            <%= f.select :task_state, Task.task_states_i18n.invert, {} %>
        </div>
    </div>

    <div class= form-group >
        <div class="m-3">
            <%= f.date_field :start_date %>
        </div>
    </div>

    <div class= form-group >
        <div class="m-3">
            <%= f.date_field :doing_date %>
        </div>
    </div>

    <div class="text-center">
        <div class="m-3">
            <%= f.submit nil, class: 'btn btn-primary' %>
        </div>
    </div>

    <div class="text-center">
      <div class="m-3">
        <%= link_to '戻る', :back, class: 'btn btn-primary' %>
      </div>
    </div>

<% end %>
