<%= javascript_pack_tag "qiita_index.js" %>
<input type="hidden" id="qiita_user_id_index" value="<%= @qiita_user_id %>" >

<div class="container">
  <div class="row">
    <input name="qiita_json" type="hidden" value=<%= @qiita_json %> class='qiita_json'/>
    <% if @tasks.present? %>
      <% @tasks.each do |task| %>

        <div class="col-sm-12 col-lg-12 mb-3">
          <div class="card">
            <div class="card-body">

              <div class="row">
                <div class="h4 col-8">
                  <%= task.name %>
                </div>
                <div class="col-1 offset-3">
                  <%= link_to task_path(task), method: :get do %>
                    <%= icon 'fas', 'info-circle' %>
                  <% end %>
                </div>
              </div>

              <div class="row">
                <div class="col-8">
                  <div class="text-secondary" >
                    <%= task.body %>
                  </div>
                </div>
                <div class="col-1 offset-3">
                  <div class="row">
                    <%= check_box '', '', { 'data-id' => task.id, 'checked' => task.completed_flag } %>
                  </div>
                </div>
              </div>

              <div class="row">
                <div id="<%= task.article.qiita_id %>">
                </div>
              </div>

            </div>
          </div>
        </div>

      <% end %>
    <% else %>
      <p><%= t('.no_result') %></p>
    <% end %>
  </div>
 </div>